<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.robowow.wowow.playingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <fragment
        android:id="@+id/fragment"
        android:name="com.robowow.wowow.common_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!--    <EditText-->
<!--        android:id="@+id/ipAddress"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:ems="10"-->
<!--        android:gravity="center"-->
<!--        android:text="192.168.0.15:2569"-->
<!--        android:inputType="textPersonName" />-->

    <Button
        android:id="@+id/voice_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="voice mode"
        android:textSize="25dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/recording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="recording in"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/TV_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TV"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TV on" />

        <Button
            android:id="@+id/tv_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TV OFF" />

        <EditText
            android:id="@+id/channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="15dp"
            android:gravity="center"
            android:hint="channel" />

        <Button
            android:id="@+id/channel_move"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:text="move" />
    </LinearLayout>

    <TextView
        android:id="@+id/music_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Music"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/baby_shark"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/background"
                    android:layout_marginBottom="5dp"
                    android:text="아기 상어"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/birthDay"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/background"
                    android:text="생일축하노래" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pororo"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/background"
                    android:text="뽀로로"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/tong"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/background"
                    android:text="통통통 할아버지" />

            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/pause_button"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            app:srcCompat="@drawable/ic_pause"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            />

    </LinearLayout>


</LinearLayout>